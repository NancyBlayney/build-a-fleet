<%= form_for @job, :url => boat_jobs_path(@boat) do |f| %>
	<%= f.hidden_field :boat_id, :value => @boat.id %>
	<%= f.label :name %>
	<%= f.text_field :name %><br><br>
	<%= f.label :containers_needed %>
	<%= number_field(:job, :containers_needed, in: 1..2000, step: 1) %><br><br>
	<%= f.label :cargo_description %>
	<%= f.text_area :cargo_description, {:minlength => 50 }%><br><br>
	<%= f.label :origin %>
	<%= f.collection_select :origin, Boat::LOCATIONS, :to_s, :to_s, 
       :include_blank => false
  %><br><br>
 	<%= f.label :destination %>
	<%= f.collection_select :destination, Boat::LOCATIONS, :to_s, :to_s, 
       :include_blank => false
  %><br><br>
  <%= f.label :price %>
  <%= number_field(:job, :price, in: 1..100000, step: 1) %><br><br><br><br>
	<%= f.submit :create %>
<% end %>