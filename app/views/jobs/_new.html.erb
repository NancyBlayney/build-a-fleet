<%= form_for @job do |f| %>
	<%= f.hidden_field :boat_id, :value => @boat.id %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :containers_needed %>
	<%= number_field(:boat, :capacity, in: 1..2000, step: 1) %>
	<%= f.label :cargo_description %>
	<%= f.text_area :cargo_description, {:minlength => 50 }%>
	<%= f.label :origin %>
	<%= f.collection_select :origin, Boat::LOCATIONS, :to_s, :to_s, 
       :include_blank => false
  %>
 	<%= f.label :destination %>
	<%= f.collection_select :destination, Boat::LOCATIONS, :to_s, :to_s, 
       :include_blank => false
  %>
  <%= f.label :price %>
  <%= number_field(:boat, :price, in: 1..100000, step: 1) %>
	<%= f.submit :create %>
<% end %>